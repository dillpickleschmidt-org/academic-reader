{
  "name": "academic-reader",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "shared/*"
  ],
  "scripts": {
    "dev": "bun scripts/dev.ts dev",
    "dev:local": "bun scripts/dev.ts dev --mode local",
    "dev:runpod": "bun scripts/dev.ts dev --mode runpod",
    "dev:datalab": "bun scripts/dev.ts dev --mode datalab",
    "build": "bun run --cwd web build",
    "typecheck": "bun run --cwd shared/core typecheck && bun run --cwd shared/convex typecheck && bun run --cwd web typecheck",
    "lint": "bun run --cwd web lint"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@fontsource-variable/geist": "^5.2.8",
    "@fontsource-variable/lora": "^5.2.8",
    "@fontsource-variable/source-code-pro": "^5.2.7",
    "@fontsource/architects-daughter": "^5.2.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-resizable-panels": "^4.4.1"
  }
}
